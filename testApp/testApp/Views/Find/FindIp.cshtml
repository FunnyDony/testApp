@*@model testApp.Models.DbData.IntervalIp*@

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>FindCity</title>
</head>
<body>

    <form method="get" action="/city/locations">
        <input type="text" name="City" value="@ViewBag.City">
        <input type="submit" value="Отправить" />
    </form>

    Найдено :
    @if (ViewBag.IntervalIp != null)
    {
        <table>
            <thead>
                <tr>
                    <td> Начало диапазона </td>
                    <td> Конец диапазона</td>
                    <td> Индекс местоположения </td>
                </tr>
            </thead>
            <tbody>
                <tr>

                    <td> @ViewBag.IntervalIp.Ip_from </td>
                    <td> @ViewBag.IntervalIp.Ip_to</td>
                    <td> @ViewBag.IntervalIp.Location_index </td>

                </tr>
            </tbody>
        </table>
    }
</body>
</html>