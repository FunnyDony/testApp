
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Поиск</title>
    <style>
        H1 {
            font-size: 70%;
            font-family: Verdana, Arial, Helvetica, sans-serif;
            color: #333366;
        }

        nav a {
            text-decoration: none;
            line-height: 38px;
        }

        .container {
            width: 100%;
            max-width: 1980px;
            padding: 15px;
            margin: 0 auto;
        }

            .container:after {
                content: "";
                display: table;
                clear: both;
            }

        .col-1-2 {
            width: 50%;
            float: left;
        }

        .col-1-3 {
            width: 50%;
            float: left;
        }

        .col-1-4 {
            width: 25%;
            float: left;
        }

        .col-2-3 {
            width: 50%;
            float: left;
        }

        .container:after, .row:after {
            content: "";
            display: table;
            clear: both;
        }

        .row {
            margin-bottom: 15px;
        }
    </style>

</head>
<body>
    <div class="H1"></div>
    <div class="main">
        <div class="container">
            <div class="row">
                <div class="col-1-3">Поиск по Ip адресу:</div>
                <div class="col-2-3">Поиск по названию города:</div>
            </div>
            <div class="row">
                <div class="col-1-2">


                    <form method="get" action="/ip/location">
                        <input type="text" name="IP" value="@ViewBag.Ip">
                        <input type="submit" value="Отправить" />

                    </form>
                </div>
                <div class="col-1-2">


                    <form method="get" action="/city/locations">
                        <input type="text" name="City" value="@ViewBag.City">
                        <input type="submit" value="Отправить" />
                    </form>

                </div>
            </div>
            <div class="row">
                <div class="col-1-2">
                    @if (ViewBag.GeoPosition != null)
                    {
                        @await Html.PartialAsync("FindCity")
                    }


                </div>

                <div class="col-1-2">

                    @if (ViewBag.IntervalIp != null)
                    {
                        @await Html.PartialAsync("FindIp")
                    }

                </div>
            </div>
        </div>
    </div>
    <footer></footer>
</body>
</html>
